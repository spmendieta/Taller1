<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/negro"
                    android:text="Nombre de la ciudad: "
                    android:textStyle="bold"
                    android:textSize="17sp"
                    />

                <TextView
                    android:id="@+id/txtMostrarNombreCiudad"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="ID de registro: "
                    android:textColor="@color/rojo"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    />

                <TextView
                    android:id="@+id/txtMostrarID"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Habitantes: "
                    android:textColor="@color/negro"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    />

                <TextView
                    android:id="@+id/txtMostrarHabitantes"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Latitud: "
                    android:textColor="@color/negro"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    />

                <TextView
                    android:id="@+id/txtMostrarLatitud"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="right" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Longitud: "
                    android:textColor="@color/negro"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    />

                <TextView
                    android:id="@+id/txtMostrarLongitud"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>