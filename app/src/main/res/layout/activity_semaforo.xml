<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Semaforo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textStyle="bold"
            android:text="Semáforo"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif-condensed"/>

        <ImageView
            android:id="@+id/imgRojo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/color_rojo"
            android:scaleType="centerCrop"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"/>

        <ImageView
            android:id="@+id/imgAmarillo"
            android:elevation="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/color_amarillo"
            android:scaleType="centerCrop"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="15dp"/>

        <ImageView
            android:id="@+id/imgVerde"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/color_verde"
            android:scaleType="centerCrop"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/rounded"
            />
        <Button
            android:id="@+id/btnIniciarSemaforo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar Semáforo"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"

            style="@style/Widget.AppCompat.Button.Colored"/>

        <TextView
            android:id="@+id/txtSegundos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"/>

    </LinearLayout>

</RelativeLayout>